@{
    ViewData["Title"] = "Home Page";
}
@if (Model.PageSettings.ShowProjectRow)
{
    <div class="row col-md-12">
        <div class="row col-md-12 title-row"><h1>My latest projects</h1></div>
        <div class="row col-md-12">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-4 project">
                    <div class="col-md-12 project-container">
                        <img src="https://via.placeholder.com/1200x450" />
                        <div class="col-md-12 project-inner">
                            <h3 class="project-title"><a asp-controller="Projects" asp-action="Single" asp-route-id="@project.TitleToURL()">@project.AllCapsTitle()</a></h3>
                            <h5 class="project-author">Created by </h5>
                            <p class="project-content">
                                @project.ShortContent()
                            </p>

                        </div>
                        <div class="col-md-12 project-footer">
                            <a asp-controller="Projects" asp-action="Single" asp-route-id="@project.TitleToURL()">Read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if(Model.PageSettings.ShowBlogRow)
{
    
<div class="row col-md-12">
    <div class="row col-md-12 title-row"><h1>My latest blog posts</h1></div>
    <div class="row col-md-12">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-4 project">
                <div class="col-md-12 project-container">
                    <div class="col-md-12 project-inner">
                        <h3 class="project-title"><a asp-controller="Projects" asp-action="Single" asp-route-id="@project.TitleToURL()">@project.AllCapsTitle()</a></h3>
                        <h5 class="project-author">Created by @project.Author.UserName</h5>
                        <p class="project-content">
                            @project.ShortContent()
                        </p>

                    </div>
                    <div class="col-md-12 project-footer">
                        <a asp-controller="Projects" asp-action="Single" asp-route-id="@project.TitleToURL()">Read more</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}

@if(Model.PageSettings.ShowAboutRow)
{

<div class="row col-md-12">
    <div class="row col-md-12 title-row"><h1>About me</h1></div>
    <div class="row col-md-12">
        @foreach (var cs in Model.ContentSections)
        {
            <div class="row col-md-12 about-row">
                <div class="col-md-12 about-row-container">
                    <h5>@cs.Title</h5>
                    <div class="col-md-12 work-history-row">
                        <p>@cs.Content</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}